# .env file for local development

# ===============================================
# Application Configuration
# ===============================================
APP_NAME=FastAPI 

# ===============================================
# Logging Configuration
# ===============================================
# Set the desired log level. Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default is INFO. Use DEBUG for more verbose output.
LOG_LEVEL=INFO

# Set to 'true' to output logs in JSON format, which is useful for log aggregators.
# Default is false.
LOGURU_JSON_LOGS=false

# ===============================================
# OpenTelemetry Tracing Configuration
# ===============================================
OTEL_SERVICE_NAME=fastapi

# To enable exporting traces to a collector (like Jaeger, Zipkin, etc.),
# uncomment the following line and set the gRPC endpoint.
# Example for a local Jaeger instance:
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_ENDPOINT=

# Set to 'true' to print full trace spans to the console for debugging.
# This can be very noisy. It's recommended to keep this false unless needed.
# Default is false.
OTEL_DEBUG_LOG_SPANS=false

# ===============================================
# CORS Configuration
# ===============================================
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# ===============================================
# Database Configuration (MongoDB)
# ===============================================
MONGO_URI=mongodb://XXXX:XXXX@localhost:27017
MONGO_DB_NAME=app_db

# ===============================================
# JWT Configuration (RS256)
# ===============================================
JWT_ALGORITHM=RS256
JWT_EXPIRATION_HOURS=24

# RSA Private Key - File path (generate keys using: python scripts/generate_rsa_keys.py)
JWT_PRIVATE_KEY_PATH=keys/private_key.pem
# RSA Private Key - Direct content (leave empty if using file path)
JWT_PRIVATE_KEY=

# RSA Public Key - File path (generate keys using: python scripts/generate_rsa_keys.py)
JWT_PUBLIC_KEY_PATH=keys/public_key.pem
# RSA Public Key - Direct content (leave empty if using file path)
JWT_PUBLIC_KEY=

# ===============================================
# AWS S3 Configuration
# ===============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
AWS_REGION=us-east-1
